	function decoratormessage(num) {
		var op = "width=500, height=200, left=50,top=150";
		open("messagetextForm.do?num="+num, "", op);
	}
	//비밀번호확인
	function inchk(imgs) {
		if (imgs.pass.value == "") {
			alert("비밀번호를 입력하세요.")
			imgs.pass.value = "";
			imgs.pass.focus();
			return false;
		} else if (imgs.tel.value == "") {
			alert("전화번호를 입력하세요.")
			imgs.tel.value = "";
			imgs.tel.focus();
			return false;
		} else if (imgs.newpass.value != imgs.newpasscheck.value) {
			alert("변경 비밀번호 와 변경 비밀번호 재입력이 다릅니다.");
			imgs.newpass.value = "";
			imgs.newpasscheck.value = "";
			imgs.newpass.focus();
			return false;
		}
		return true;
	}
	//제목입력확인
	function inputcheck() {
		if (nt.subject.value == "") {
			alert("제목을 입력하세요");
			nt.subject.focus();
			return;
		}
		nt.submit();
	}
	//수정제목입력확인
	function editcheck() {
		if (ed.subject.value == "") {
			alert("제목을 입력하세요");
			nt.subject.focus();
			return;
		}
		ed.submit();
	}
	//파일삭제
	function file_delete() {
		document.ed.file2.value = "";
		file_desc.style.display = "none";
	}

</script>

